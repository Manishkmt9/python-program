print("""
1. Addition 
2. Sub
3. multiplication
4. exit
""")
choice  = input("enter the choose: " ) 
num1 = float(input("enter the first num : "))
num2 = float(input("enter the second num : " ))  
if choice == "1" :
    print(num1 + num2 )
elif choice == "2" :
    print(num1 - num2 )
elif choice == "3" :
    print(num1 * num2 )
else:
    print("you are exited ")
